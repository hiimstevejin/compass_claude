{
  "manifest_version": 3,
  "name": "Quiz Assistant",
  "version": "1.0.0",
  "description": "AI-powered quiz management with instructor settings and student assistance",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "quiz-question/quiz-question.js"],
      "css": ["content.css", "quiz-question/quiz-question.css"]
    },
    {
      "matches": ["<all_urls>"],
      "js": [
        "instructor-settings/inject-prompt-box.js",
        "instructor-settings/instructor-content.js"
      ],
      "css": ["instructor-settings/inject-prompt-box.css"]
    }
  ],
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "http://localhost:*/*",
    "https://localhost:*/*",
    "http://*/*",
    "https://*/*",
    "http://localhost:3000/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "instructor-settings/inject-prompt-box.css",
        "instructor-settings/inject-prompt-box.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
